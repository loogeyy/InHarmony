<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_navy"
    tools:context=".fragments.MyProfileFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="72dp"
        android:src="@drawable/nopfp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/nopfp" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="189dp"
        android:layout_height="39dp"
        android:layout_marginTop="6dp"
        android:ems="10"
        android:fontFamily="@font/anteb_bold"
        android:textAlignment="center"
        android:textColor="@color/light_blue"
        android:textColorHint="@color/light_blue"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProfilePic"
        tools:text="Name" />

    <TextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:fontFamily="@font/anteb_bold"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/light_blue"
        android:textColorHint="@color/light_blue"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        tools:text="19" />

    <ImageView
        android:id="@+id/btnEditProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/edit"
        tools:layout_editor_absoluteX="336dp"
        tools:layout_editor_absoluteY="25dp" />

    <TextView
        android:id="@+id/tvFavGenres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/anteb_bold"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toEndOf="@+id/genresText"
        app:layout_constraintTop_toBottomOf="@+id/tvBio"
        tools:text="Indie Pop, Pop, Electro" />

    <TextView
        android:id="@+id/genresText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/anteb_bold"
        android:text="Favorite Genres:"
        android:textColor="@color/light_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBio" />

    <ImageView
        android:id="@+id/ivFavArtist"
        android:layout_width="52dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/artistText"
        tools:layout_editor_absoluteX="128dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvFavArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/anteb_bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/ivFavArtist"
        app:layout_constraintTop_toBottomOf="@+id/artistText"
        tools:text="Dayglow" />

    <TextView
        android:id="@+id/artistText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/anteb_bold"
        android:text="Favorite Artist:"
        android:textColor="@color/light_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFavGenres" />

    <TextView
        android:id="@+id/tvFavAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/anteb_bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/ivFavAlbum"
        app:layout_constraintTop_toBottomOf="@+id/albumText"
        tools:text="Harmony House" />

    <TextView
        android:id="@+id/albumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/anteb_bold"
        android:text="Favorite Album:"
        android:textColor="@color/light_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFavArtist" />

    <ImageView
        android:id="@+id/ivFavTrack"
        android:layout_width="52dp"
        android:layout_height="53dp"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="640dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvEditFavTrack"
        android:layout_width="82dp"
        android:layout_height="53dp"
        android:background="@color/white"
        android:fontFamily="@font/anteb_bold"
        android:textColor="@color/dark_navy"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="640dp"
        tools:text="Close To You" />

    <TextView
        android:id="@+id/trackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/anteb_bold"
        android:text="Favorite Track:"
        android:textColor="@color/light_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFavAlbum" />

    <ImageView
        android:id="@+id/ivFavAlbum"
        android:layout_width="52dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/albumText"
        tools:layout_editor_absoluteX="128dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/anteb_bold"
        android:textColor="@color/white"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAge"
        tools:text="Hi! My name is Lucy and I like using spotify." />

</androidx.constraintlayout.widget.ConstraintLayout>